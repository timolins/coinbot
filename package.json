{
  "name": "coinbot",
  "description": "Random decisions for Telegram",
  "version": "0.1.0",
  "main": "bot/index.js",
  "license": "MIT",
  "author": "Timo Lins <me@timo.sh>",
  "repository": "timolins/coinbot",
  "scripts": {
    "start": "npm run start:bot & npm run start:web",
    "start:bot": "node dist/bot/index.js",
    "start:web": "next start",
    "dev": "npm run dev:bot & npm run dev:web",
    "dev:bot": "gulp",
    "dev:web": "next",
    "build": "npm run build:bot && npm run build:web",
    "build:bot": "gulp transpile",
    "build:web": "next build",
    "prepublish": "npm run build",
    "deploy": "now --alias coinbot.timo.sh",
    "test": "xo"
  },
  "now": {
    "env": {
      "TOKEN": "@coinbot-token"
    }
  },
  "hyperlayout": {
    "entry": "vertical",
    "layout": [
      "dotenv npm run start:bot",
      "npm run start:web"
    ]
  },
  "babel": {
    "presets": [
      "es2015-node"
    ],
    "plugins": [
      "transform-async-to-generator",
      "syntax-async-functions",
      "add-module-exports"
    ]
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "env": [
      "node"
    ],
    "rules": {
      "camelcase": 0
    }
  },
  "dependencies": {
    "chance": "^1.0.4",
    "next": "latest",
    "telegraf": "^3.6.5"
  },
  "devDependencies": {
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-preset-es2015-node": "^6.1.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cached": "^1.1.0",
    "xo": "^0.17.0"
  }
}
